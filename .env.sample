# ============================================
# TELEGRAM SELF-DESTRUCTING BOT CONFIGURATION
# ============================================

# Telegram API Configuration
# Get these from https://my.telegram.org
API_ID=1234567
API_HASH=your_api_hash_here

# Bot Configuration
# Get bot token from @BotFather on Telegram
BOT_TOKEN=your_bot_token_here

# Admin Configuration
# Your Telegram User ID (you can get it from @getidsbot)
ADMIN_ID=123456789

# Channel Configuration
# Channel ID where files will be saved (must start with -100)
# Get this by adding @getidsbot to your channel
CHANNEL_ID=-1001234567890

# Session Name (Optional, default: "self_destruct")
SESSION_NAME=self_destruct

# ============================================
# SECURITY CONFIGURATION
# ============================================

# Encryption Key for sensitive data
# Generate a strong random key (32 characters minimum)
ENCRYPTION_KEY=your_strong_encryption_key_here_32_chars_min

# Database Encryption Key (Optional)
# Separate key for database encryption
DB_ENCRYPTION_KEY=your_db_encryption_key_here

# ============================================
# ACCESS CONTROL
# ============================================

# Allowed Users (Optional)
# Comma-separated list of user IDs who can use the bot
# Example: ALLOWED_USERS="123456789,987654321"
ALLOWED_USERS=""

# ============================================
# ADVANCED SETTINGS
# ============================================

# Log Level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Queue Processing Interval (seconds)
QUEUE_INTERVAL=300

# Auto-check Interval (seconds)
AUTOCHECK_INTERVAL=3600

# Max Retry Attempts
MAX_RETRIES=3

# Max File Size (in bytes, 2GB default)
MAX_FILE_SIZE=2147483648